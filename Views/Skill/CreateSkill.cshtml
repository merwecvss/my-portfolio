@model Skill

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/Layout/index.cshtml";
}

<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Yetenek</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Yetenek Ekleme Sayfası</div>
						</div>
						<div class="card-body">
                                <form method="post">
                                    <label>Yetenek Adı</label>
                                    <input type="text" asp-for="Title" class="form-control" />
                                    <br>
                                    <label>Yetenek Değeri</label>
                                    <input type="text" asp-for="Value" class="form-control" />
                                    <br>
                                    <button class="btn btn-success">Yetenek Ekle</button>
                                </form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>