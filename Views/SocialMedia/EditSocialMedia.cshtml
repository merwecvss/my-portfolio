@model SocialMedia

@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Layout/index.cshtml";
}

<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Sosyal Medya</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Sosyal Medya Düzenleme Sayfası</div>
						</div>
						<div class="card-body">
                                <form method="post">
                                    <input type="hidden" asp-for="SocialMediaId"/>
                                    <label>Sosyal Medya Adı</label>
                                    <input type="text" asp-for="Title" class="form-control" />
                                    <br>
                                    <label>Uzantısı</label>
                                    <input type="text" asp-for="Url" class="form-control" />
                                    <br>
                                    <label>İkonu</label>
                                    <input type="text" asp-for="Icon" class="form-control" />
                                    <br>
                                    <button class="btn btn-warning">Güncelle</button>
                                </form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>