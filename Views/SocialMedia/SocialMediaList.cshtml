@model List<SocialMedia>

@{
    ViewData["Title"] = "Social Media List";
    Layout = "~/Views/Layout/index.cshtml";
}

    <div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Sosyal Medya Listesi</div>
						</div>
						<div class="card-body">
						    <div class="card-sub">Deneyimler İle İlgili İşlemleri Aşağıdaki Tablo Üzerinden Gerçekleştirebilirsiniz.</div>
								<table class="table mt-3">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Sosyal Medya Adı</th>
											<th scope="col">Uzantısı</th>
											<th scope="col">İkonu</th>
                                            <th scope="col">Sil</th>
                                            <th scope="col">Güncelle</th>
										</tr>
									</thead>
								    <tbody>
                                        @foreach (var item in Model){
                                            <tr>
							    			<td>@item.SocialMediaId</td>
											<td>@item.Title</td>
											<td>@item.Url</td>
											<td>@item.Icon</td>
                                            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="btn btn-warning">Güncelle</a></td>

										    </tr>
                                        }
									</tbody>
								</table>
                                <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-success">Yeni Sosyal Medya Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





				
