@model Contact

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Layout/index.cshtml";
}

<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">İletişim Bilgileri</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
                                <form method="post">
                                    <input type="hidden" asp-for="ContactId"/>
                                    <label>Başlık</label>
                                    <input type="text" asp-for="Title" class="form-control" />
                                    <br>
                                    <label>Açıklama</label>
                                    <input type="text" asp-for="Description" class="form-control" />
                                    <br>
                                    <label>Telefon Numarası</label>
                                    <input type="text" asp-for="Phone" class="form-control" />
                                    <br>
                                    <label>Email Adresi</label>
                                    <input type="text" asp-for="Email" class="form-control" />
                                    <br>
                                    <label>Ev Adresi</label>
                                    <input type="text" asp-for="Address" class="form-control" />
                                    <br>
                                    <button class="btn btn-warning">İletişim Bilgilerini Güncelle</button>
                                </form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>