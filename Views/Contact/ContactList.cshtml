@model List<Contact>

@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Views/Layout/index.cshtml";
}

    <div class="content">
		<div class="container-fluid">
			<h4 class="page-title">İletişim Bilgileri</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-body">
								<table class="table mt-3">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Başlık</th>
											<th scope="col">Açıklama</th>
											<th scope="col">Telefon Numarası</th>
                                            <th scope="col">Email Adresi</th>
                                            <th scope="col">Ev Adresi</th>
                                            <th scope="col">Güncelle</th>
										</tr>
									</thead>
								    <tbody>
                                        @foreach (var item in Model){
                                            <tr>
							    			<td>@item.ContactId</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.Phone</td>
											<td>@item.Email</td>
                                            <td>@item.Address</td>
                                            <td><a href="/Contact/EditContact/@item.ContactId" class="btn btn-warning">Güncelle</a></td>
										    </tr>
                                        }
									</tbody>
								</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





				
