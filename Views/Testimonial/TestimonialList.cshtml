@model List<Testimonial>

@{
    ViewData["Title"] = "Social Media List";
    Layout = "~/Views/Layout/index.cshtml";
}

    <div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Referans</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Referans Listesi</div>
						</div>
						<div class="card-body">
						    <div class="card-sub">Referans İle İlgili İşlemleri Aşağıdaki Tablo Üzerinden Gerçekleştirebilirsiniz.</div>
								<table class="table mt-3">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Kişi Adı Soyadı</th>
											<th scope="col">Unvanı</th>
											<th scope="col">Hakkımda Yazdığı</th>
											<th scope="col">Fotoğrafı</th>
                                            <th scope="col">Sil</th>
                                            <th scope="col">Güncelle</th>
										</tr>
									</thead>
								    <tbody>
                                        @foreach (var item in Model){
                                            <tr>
							    			<td>@item.TestimonialId</td>
											<td>@item.NameSurname</td>
											<td>@item.Title</td>
											<td>@item.Description</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>

										    </tr>
                                        }
									</tbody>
								</table>
                                <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Yeni Referans Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





				
