@model About

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Layout/index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Bilgileri Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br>
                            <label>Alt Açıklama</label>
                            <input type="text" asp-for="SubDescription" class="form-control" />
                            <br>
                            <label>Detay</label>
                            <input type="text" asp-for="Details" class="form-control" />
                            <br>
                            <button class="btn btn-warning">Hakkımda Bilgilerini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>