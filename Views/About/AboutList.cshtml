@model List<About>

@{
    ViewData["Title"] = "About List";
    Layout = "~/Views/Layout/index.cshtml";
}

    <div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Hakkımda</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Hakkımda Listesi</div>
						</div>
						<div class="card-body">
						    <div class="card-sub">Hakkımda İle İlgili İşlemleri Aşağıdaki Tablo Üzerinden Gerçekleştirebilirsiniz.</div>
								<table class="table mt-3">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Başlık</th>
											<th scope="col">Alt Açıklama</th>
											<th scope="col">Detay</th>
										</tr>
									</thead>
								    <tbody>
                                        @foreach (var item in Model){
                                            <tr>
							    			<td>@item.AboutId</td>
											<td>@item.Title</td>
											<td>@item.SubDescription</td>
											<td>@item.Details</td>
                                            <td><a href="/About/EditAbout/@item.AboutId" class="btn btn-warning">Güncelle</a></td>
										    </tr>
                                        }
									</tbody>
								</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





				
