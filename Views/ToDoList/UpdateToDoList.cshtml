@model ToDoList

@{
    ViewData["Title"] = "Experience List";
    Layout = "~/Views/Layout/index.cshtml";
}


    <div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Yapılacaklar</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
					    <div class="card-header">
							<div class="card-title">Yapılacak İşler Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
						    <form method="post">
                                <input type="hidden" asp-for="ToDoListId"/>
                                    <label>İçerik/Başlık</label>
                                    <input type="text" asp-for="Title" class="form-control" />
                                    <br>
                                    <label>Tarih</label>
                                    <input type="date" asp-for="Time" class="form-control" />
                                    <br>
                                    <label>Görsel Yolu</label>
                                    <input type="text" asp-for="İmageUrl" class="form-control" />
                                    <br>
                                    <button class="btn btn-success">Yapılacak İşi Güncelle</button>
                            </form>
					</div>
				</div>
			</div>
		</div>
	</div>





				
